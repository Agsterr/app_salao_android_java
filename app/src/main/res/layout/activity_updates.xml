<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textLatestVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Última versão:"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDownloadLatest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Baixar e instalar" />

    <Button
        android:id="@+id/buttonOlderVersions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ver versões anteriores" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Observação: para instalar uma versão mais antiga (downgrade), pode ser necessário desinstalar a versão atual. Use a tela de Backup para exportar seus dados antes e importar depois." />

</LinearLayout>