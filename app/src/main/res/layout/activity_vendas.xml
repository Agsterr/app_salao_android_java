<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/container_padding">

    <TextView
        android:id="@+id/textViewTituloVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Vendas"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large" />

    <Button
        android:id="@+id/buttonVoltarVendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="Voltar" />

    <Button
        android:id="@+id/buttonNovaVenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="Nova Venda" />

    <EditText
        android:id="@+id/editTextBuscarVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:hint="Buscar por cliente ou produto"
        android:inputType="text" />

    <ListView
        android:id="@+id/listViewVendas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/spacing_small"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/spacing_small" />

</LinearLayout>